<odoo>
    <!-- Faculty Tree View -->
    <record id="view_college_faculty_tree" model="ir.ui.view">
        <field name="name">college.faculty.tree</field>
        <field name="model">college.faculty</field>
        <field name="arch" type="xml">
            <tree string="Faculty">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="designation"/>
            </tree>
        </field>
    </record>

    <!-- Faculty Form View -->
    <record id="view_college_faculty_form" model="ir.ui.view">
        <field name="name">college.faculty.form</field>
        <field name="model">college.faculty</field>
        <field name="arch" type="xml">
            <form string="Faculty">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="department_id"/>
                        <field name="designation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Faculty Search View -->
    <record id="view_college_faculty_search" model="ir.ui.view">
        <field name="name">college.faculty.search</field>
        <field name="model">college.faculty</field>
        <field name="arch" type="xml">
            <search string="Search Faculty">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
            </search>
        </field>
    </record>

    <!-- Faculty Action Window -->
    <record id="action_college_faculty" model="ir.actions.act_window">
        <field name="name">Faculty</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">college.faculty</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_college_faculty_search"/>
    </record>

    <!-- Faculty Menu Item -->
    <menuitem id="menu_college_faculty"
              name="Faculty"
              parent="menu_faculty_management"
              action="action_college_faculty"/>

    <!-- Top Menu -->
    <menuitem id="menu_faculty_management"
              name="Faculty"
              parent="menu_college_root"
              sequence="30"/>
</odoo>