<odoo>
    <!-- Course Tree View -->
    <record id="view_college_course_tree" model="ir.ui.view">
        <field name="name">college.course.tree</field>
        <field name="model">college.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="code"/>
                <field name="name"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Course Form View -->
    <record id="view_college_course_form" model="ir.ui.view">
        <field name="name">college.course.form</field>
        <field name="model">college.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="duration"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Search View -->
    <record id="view_college_course_search" model="ir.ui.view">
        <field name="name">college.course.search</field>
        <field name="model">college.course</field>
        <field name="arch" type="xml">
            <search string="Search Courses">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- Course Action Window -->
    <record id="action_college_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">college.course</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_college_course_search"/>
    </record>

    <!-- Course Menu Item -->
    <menuitem id="menu_college_course"
              name="Courses"
              parent="menu_course_management"
              action="action_college_course"/>

    <!-- Top Menu -->
    <menuitem id="menu_course_management"
              name="Courses"
              parent="menu_college_root"
              sequence="20"/>

</odoo>